<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_ama"
    tools:context="supercrack.sigmamoviles.com.ama.Fragment.CN_AcercaDeFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewSize">


            <ImageView
                android:layout_width="0dp"
                app:srcCompat="@drawable/logo2"
                android:id="@+id/imageView8"
                tools:ignore="ContentDescription"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="350dp" />

            <TextView
                android:text="@string/contenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:text="@string/correoama"
                        android:id="@+id/btn_fragmentacercade_correo"
                        android:background="@drawable/boton_redondo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="450dp"
                        android:textSize="30sp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="474dp"
                        tools:layout_editor_absoluteX="73dp"
                        android:layout_height="75dp" />

                    <Button
                        android:text="@string/paginaama"
                        android:layout_width="450dp"
                        android:id="@+id/btn_fragmentacercade_pagina"
                        android:background="@drawable/boton_redondo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="544dp"
                        tools:layout_editor_absoluteX="73dp"
                        android:layout_height="75dp" />

                    <Button
                        android:text="@string/sisol"
                        android:layout_width="450dp"
                        android:id="@+id/btn_fragmentacercade_sisol"
                        android:background="@drawable/boton_redondo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="608dp"
                        tools:layout_editor_absoluteX="79dp"
                        android:layout_height="75dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    tools:ignore="RtlHardcoded">

                    <Button
                        android:text="@string/infosalud"
                        android:layout_width="450dp"
                        android:id="@+id/btn_fragmentacercade_infosalud"
                        android:background="@drawable/boton_redondo"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="30sp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="464dp"
                        tools:layout_editor_absoluteX="417dp"
                        android:layout_height="75dp" />

                    <Button
                        android:text="@string/cunamas"
                        android:id="@+id/btn_fragmentacercade_cunamas"
                        android:background="@drawable/boton_redondo"
                        android:layout_width="450dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="550dp"
                        tools:layout_editor_absoluteX="421dp"
                        android:layout_height="75dp" />

                    <Button
                        android:text="@string/segurodesalud"
                        android:id="@+id/btn_fragmentacercade_segurosalud"
                        android:background="@drawable/boton_redondo"
                        android:layout_width="450dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="30sp"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/blanco_ama"
                        tools:layout_editor_absoluteY="624dp"
                        tools:layout_editor_absoluteX="427dp"
                        android:layout_height="75dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
